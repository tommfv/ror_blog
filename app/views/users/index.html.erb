<style >
    table, th, td {
        border: 1px solid black;
    }
</style>

<h1>All users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Company</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= button_to 'New User', users_new_path, :method => :get %> 
    <br>
    <br>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.company %></td>
        <td>
            <% if user.admin? %>
                Admin
            <% else %>
                Staff    
            <% end %>
        </td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% if current_user.id != user.id %>
          <td>
            <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure remove user ?' } %>  
          </td>
          <td></td>
        <% else %>
          <td></td>
          <td>Current</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Back", root_path %>